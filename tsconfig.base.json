{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  }
}
